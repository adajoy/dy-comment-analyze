generator client {
  provider     = "prisma-client-js"
  output       = "../generated"
  moduleFormat = "esm"
}

datasource db {
  provider = "postgresql"
}

model InterestedUser {
  id        String   @id @default(cuid())
  name      String
  content   String   @db.Text
  intention String?  @db.Text
  createdAt DateTime @default(now())
  sessionId String?
  
  @@index([createdAt])
  @@index([name])
  @@map("interested_users")
}



model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  diaries   Diary[]
  createdAt DateTime @default(now())
}

model Diary {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  title     String?
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
