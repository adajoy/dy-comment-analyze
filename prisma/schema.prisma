generator client {
  provider     = "prisma-client-js"
  output       = "../generated"
  moduleFormat = "esm"
}

datasource db {
  provider = "postgresql"
}

model InterestedUser {
  id        String   @id @default(cuid())
  name      String
  content   String   @db.Text
  intention String?  @db.Text
  createdAt DateTime @default(now())
  sessionId String?
  
  @@index([createdAt])
  @@index([name])
  @@map("interested_users")
}
